@model BandCentral.ViewModels.BandViewModel

@{
    ViewBag.Title = "Add Favorite";
}

<h2>Favorite</h2>

<p class="text-danger">@ViewBag.ErrorMessage</p>

<h3>Are you sure you want to favorite @Html.DisplayFor(model => model.BandName)?</h3>
<div>
    <hr />

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Add Favorite" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
